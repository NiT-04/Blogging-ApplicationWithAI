<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")%>
    <title><%= blog.title %></title>
    <style>
        .summary {
            font-style: italic;
            color: #555;
            margin-bottom: 10px;
        }
        .tags {
            margin-top: 5px;
            margin-bottom: 10px;
        }
        .tag {
            display: inline-block;
            background-color: #e0e0e0;
            color: #333;
            padding: 3px 8px;
            border-radius: 5px;
            margin-right: 5px;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <%- include("./partials/nav")%>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>

        <!-- AI Tags -->
        <% if(blog.tagsAI && blog.tagsAI.length > 0){ %>
            <div class="tags">
                <% blog.tagsAI.forEach(function(tag){ %>
                    <span class="tag"><%= tag %></span>
                <% }) %>
            </div>
        <% } %>

        <!-- Cover Image -->
        <% if(blog.coverImageURL && blog.coverImageURL !== "") { %>
            <img src="<%= blog.coverImageURL %>" width="200px" class="mb-3">
        <% } %>

        <!-- AI Summary -->
        <% if(blog.summary && blog.summary.length > 0){ %>
            <p class="summary"><strong>Summary:</strong> <%= blog.summary %></p>
        <% } %>

        <!-- Blog Content -->
        <pre class="mt-3"><%= blog.body %></pre>
        <!-- pre tag maintains spacing -->
    </div>

    <!-- Author Info -->
    <div class="container mt-4 d-flex align-items-center">
        <% if(blog.createdBy.profileImageURL){ %>
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px" class="me-2">
        <% } %>
        <span><%= blog.createdBy.fullName %></span>
    </div>

    <!-- Comments Section -->
    <div class="container mt-3">
        <h3>Comments</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-3">
                <div class="mb-3">
                    <input type="text" class="form-control" id="content" name="content" placeholder="Write a comment...">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        <% } %>

        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div class="d-flex align-items-center mb-2">
                    <% if(comment.createdBy.profileImageURL){ %>
                        <img src="<%= comment.createdBy.profileImageURL %>" width="50px" class="me-2">
                    <% } %>
                    <div>
                        <strong><%= comment.createdBy.fullName %></strong>
                        <pre class="mb-0"><%= comment.content %></pre>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include("./partials/scripts")%>
</body>
</html>
